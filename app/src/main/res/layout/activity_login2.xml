<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/mian_bg"
    tools:context="org.xqj.shandiandai.activity.Login2Activity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <ImageView
            android:elevation="3dp"
            android:id="@+id/iv_logo"
            android:layout_marginTop="70dp"
            android:layout_centerHorizontal="true"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@mipmap/logo"/>

        <LinearLayout
            android:id="@+id/login_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:layout_below="@id/iv_logo"
            android:layout_marginTop="60dp"
            android:orientation="vertical"
            >
            <RelativeLayout
                android:id="@+id/layout_phone"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@drawable/login_et_bg"
                >
                <ImageView
                    android:id="@+id/iv_phone"
                    android:layout_marginLeft="10dp"
                    android:layout_centerVertical="true"
                    android:layout_width="20dp"
                    android:layout_height="21dp"
                    android:src="@mipmap/ic_phone"/>
                <EditText
                    android:id="@+id/et_phone"
                    android:background="@null"
                    android:layout_marginLeft="10dp"
                    android:maxLength="11"
                    android:hint="请输入手机号码"
                    android:textColorHint="#c1c1c1"
                    android:inputType="phone"
                    android:textColor="#ffffff"
                    android:layout_toRightOf="@id/iv_phone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_yanzheng"
                android:layout_width="match_parent"
                android:background="@drawable/login_et_bg"
                android:layout_marginTop="15dp"
                android:layout_height="55dp"
                >
                <ImageView
                    android:id="@+id/iv1_yanzheng"
                    android:layout_marginLeft="10dp"
                    android:layout_centerVertical="true"
                    android:layout_width="20dp"
                    android:layout_height="21dp"
                    android:src="@mipmap/ic_code"/>
                <EditText
                    android:id="@+id/et_yanzheng"
                    android:background="@null"
                    android:layout_marginLeft="10dp"
                    android:maxLength="4"
                    android:hint="右侧图片结果"
                    android:textColorHint="#c1c1c1"
                    android:textColor="#ffffff"
                    android:inputType="phone"
                    android:layout_marginRight="100dp"
                    android:layout_toRightOf="@id/iv1_yanzheng"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
                <ImageView
                    android:layout_marginRight="10dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:id="@+id/iv_yanzheng"
                    android:layout_width="100dp"
                    android:layout_height="45dp"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/layout_code"
                android:layout_width="match_parent"
                android:background="@drawable/login_et_bg"
                android:layout_marginTop="15dp"
                android:layout_height="55dp"
                android:visibility="gone">
                <ImageView
                    android:id="@+id/iv_code"
                    android:layout_marginLeft="10dp"
                    android:layout_centerVertical="true"
                    android:layout_width="20dp"
                    android:layout_height="21dp"
                    android:src="@mipmap/ic_code"/>
                <EditText
                    android:id="@+id/et_code"
                    android:background="@null"
                    android:layout_marginLeft="10dp"
                    android:maxLength="4"
                    android:hint="请输入验证码"
                    android:textColorHint="#c1c1c1"
                    android:textColor="#ffffff"
                    android:inputType="phone"
                    android:layout_marginRight="100dp"
                    android:layout_toRightOf="@id/iv_code"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
                <Button
                    android:layout_marginRight="10dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:id="@+id/bt_getCode"
                    android:layout_width="75dp"
                    android:layout_height="30dp"
                    android:textColor="#f3f8fc"
                    android:text="获取验证码"
                    android:textSize="12sp"
                    android:background="@drawable/login_code"/>
            </RelativeLayout>
        </LinearLayout>

    </RelativeLayout>

    <Button
        android:layout_below="@id/login_ll"
        android:elevation="1dp"
        android:layout_marginTop="60dp"
        android:id="@+id/bt_Login"
        android:layout_marginRight="30dp"
        android:layout_width="match_parent"
        android:layout_marginLeft="30dp"
        android:layout_height="50dp"
        android:text="登     录"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:background="@drawable/button"/>

</LinearLayout>
